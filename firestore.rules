rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{document} {
      allow read: if request.auth != null; // Only admins can read messages
      allow write: if true; // Anyone can send a message
    }
    match /gallery/{document} {
      allow read: if true;
      allow write: if true;
    }
    match /news/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /events/{document} {
      allow read: if true; // Anyone can read events (for public display)
      allow write: if request.auth != null; // Only admins can create/edit/delete events
    }
  }
} 